<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.arenacloud.broadcast.android.example.BroadcastTestActivity">

   <com.arenacloud.broadcast.android.streaming.AspectFrameLayout
       android:id="@+id/cameraPreview_afl"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_alignParentBottom="true"
       android:layout_centerInParent="true" >

       <com.arenacloud.broadcast.android.BroadcastView
           android:id="@+id/cameraPreview_surfaceView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center" />
   </com.arenacloud.broadcast.android.streaming.AspectFrameLayout>

   <include layout="@layout/status_test" />

   <include layout="@layout/camera_button_holder_test" />


</RelativeLayout>
