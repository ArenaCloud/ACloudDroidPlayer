<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_button_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/toggleRecording_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:scaleType="center"
        android:background="@drawable/shutter_button"

        android:layout_marginRight="@dimen/cine_item_padding"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <Button
        android:id="@+id/toggleSwitch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:scaleType="center"
        android:text="@string/SwitchCamera"

        android:layout_marginRight="@dimen/cine_item_padding"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/toggleScreenShot_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:scaleType="center"
        android:text="@string/ScreenShot"

        android:layout_marginRight="@dimen/cine_item_padding"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
